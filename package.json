{
  "name": "libcream",
  "version": "0.1.4-1",
  "description": "A CREAM client library",
  "main": "build/index.js",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "format": "npx prettier './ts/**/*.{js,ts}' --write",
    "test": "npx jest",
    "test:maci": "npx jest maci.test.ts",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazuakiishiguro/libcream.git"
  },
  "author": "Kazuaki Ishiguro",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/kazuakiishiguro/libcream/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./ts/**/*.{js,ts}": "prettier --write"
  },
  "homepage": "https://github.com/kazuakiishiguro/libcream#readme",
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^14.11.8",
    "husky": "^4.3.0",
    "jest": "^26.1.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.1.2",
    "web3-utils": "^1.3.0"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.0.14",
    "axios": "^0.21.1",
    "circomlib": "^0.5.2",
    "cream-merkle-tree": "^0.0.9",
    "lint-staged": "^10.5.4",
    "maci-crypto": "^0.4.11",
    "maci-domainobjs": "^0.4.11",
    "typescript": "^3.9.9"
  }
}
